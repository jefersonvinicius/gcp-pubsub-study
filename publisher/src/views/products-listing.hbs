<html>
    <head>
        <title>Cadastrar Produto</title>
        {{> bootstrap}}
    </head>
    <body>
        <div class="container-sm p-5">
            <div class="d-flex justify-content-end">
                <a href="/" class="btn btn-primary">
                    ADICIONAR PRODUTO
                </a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{brl this.price}}</td>
                            <td align="right">
                                <form method="POST" action="/produtos/{{ this.id }}?_method=DELETE">
                                    <button type="submit" class="btn">
                                        <i class="bi-trash text-danger"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{else}}
                        <div class="alert alert-info" role="alert">Nenhum produto encontrado!</div>
                    {{/each}}
                </tbody>
            </table>
            <div class="d-flex justify-content-center align-items-center">
                <a href="/produtos?limite={{ limit }}&inicio={{ previousOffset }}" class="btn btn-primary {{#unless offset }} disabled {{/unless}}">
                    Anterior
                </a>
                <span class="mx-2">
                    {{ currentTotal }} / {{ total }}
                </span>
                <a href="/produtos?limite={{ limit }}&inicio={{ nextOffset }}" class="btn btn-primary {{#if allProductsLoaded }} disabled {{/if}}">
                    Próximo
                </a>
            </div>
        </div>
    </body>
</html>